<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="pmr2">

  <!-- Note storage -->

  <adapter
      for="pmr2.app.content.interfaces.IExposureFile"
      factory=".BasicMathMLNoteFactory"
      provides="pmr2.app.annotation.interfaces.IRawTextNote"
      name="basic_mathml"
      />

  <adapter
      for="pmr2.app.content.interfaces.IExposureFile"
      factory=".BasicCCodeNoteFactory"
      provides="pmr2.app.annotation.interfaces.IRawTextNote"
      name="basic_ccode"
      />

  <adapter
      for="pmr2.app.content.interfaces.IExposureFile"
      factory=".CmetaNoteFactory"
      provides=".interfaces.ICmetaNote"
      name="cmeta"
      />

  <adapter
      for="pmr2.app.content.interfaces.IExposureFile"
      factory=".OpenCellSessionNoteFactory"
      provides=".interfaces.IOpenCellSessionNote"
      name="opencellsession"
      />

  <!-- Note Generation -->

  <utility
      name="basic_mathml"
      component=".annotator.CellML2MathMLAnnotatorFactory"
      provides="pmr2.app.annotation.interfaces.IExposureFileAnnotator"
      />

  <utility
      name="basic_ccode"
      component=".annotator.CellML2CAnnotatorFactory"
      provides="pmr2.app.annotation.interfaces.IExposureFileAnnotator"
      />

  <utility
      name="cmeta"
      component=".annotator.CmetaAnnotatorFactory"
      provides="pmr2.app.annotation.interfaces.IExposureFileAnnotator"
      />

  <utility
      name="opencellsession"
      component=".annotator.OpenCellSessionAnnotatorFactory"
      provides="pmr2.app.annotation.interfaces.IExposureFileAnnotator"
      />

  <!-- Browser pages -->

  <browser:page
      for="pmr2.app.content.ExposureFile"
      name="basic_ccode"
      class=".browser.BasicCCodeNoteView"
      permission="zope2.View"
      />

  <browser:page
      for="pmr2.app.content.ExposureFile"
      name="cmeta"
      class=".browser.CmetaNoteView"
      permission="zope2.View"
      />

  <browser:page
      for="pmr2.app.content.ExposureFile"
      name="opencellsession"
      class=".browser.OpenCellSessionNoteView"
      permission="zope2.View"
      />

</configure>
